<div class="panel panel-primary">
    <div class="panel-heading clearfix">

        <div class="pull-right">
            <div ng-controller="data1">

                <a href="" ng-click="abremodal('../Curriculum_mant/agregar_vista_capacitaciones_curriculum' ,'')" class="btn btn-default "><i class="fa fa-fw fa-lg fa-plus-circle text-warning"></i>Agregar</a>
            </div>
        </div>
        <div class="pull-left">
            <h3>Mis Capacitaciones</h3>
        </div>
    </div>
    <div class="panel-body" style="word-break: break-word">
        <div class="col-md-12">
           
            <div ng-show="ver_cap">
                <div layout="row" layout-sm="column" layout-align="space-around">
                    <md-progress-circular md-mode="indeterminate"></md-progress-circular>
                </div>
            </div>
            <div ng-show="!ver_cap && !error_cap && cap_curriculum <= 0">
                No se Encontraron resultados ...

            </div>
            <div ng-show="!ver_cap && error_cap">
                error viejo no cargo ...

            </div>
            <div ng-show="cap_curriculum.length > 0">
                <div ng-repeat="cap_c in cap_curriculum track by $index">

                  
                    <div class="well">
                        <div class="row" style="border:dashed;margin-bottom:5px;">
                            <div class="col-xs-3">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <h4 class="text-center"> Realizada el:</h4>
                                    </div>
                                    <div class="col-xs-12">
                                        <h4 class="text-center text-info">{{cap_c.ano_inicio_capacitacion_curriculum.replace('/Date(','').replace(')/','') | date:'dd-MM-yyyy'}} </h4>
                                    </div>
                                  
                                </div>
                                <div class="row">
                              
                                    <div class="col-xs-12">
                                        <h4 class="text-center">Horas Cursadas</h4>
                                    </div>
                                    <div class="col-xs-12">
                                        <h4 class="text-center text-info">{{cap_c.horas_capacitacion}}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-9">
                                <div class="row">
                                    <div class="col-xs-8">
                                        <h4>Nombre Capacitacion: </h4>   <h4 class="text-info"> {{cap_c.nombre_capacitacion}}</h4>
                                    </div>
                                    <div class="col-xs-4">
                                        <div class="text-center well well-sm">
                                            <div ng-controller="data1">

                                                <a href="" ng-click="abremodal('../Curriculum_mant/editar_vista_capacitaciones_curriculum/' ,cap_c.id_capacitacion_curriculum)" class="btn btn-block btn-info btn-sm"><i class="fa fa-star fa-fw"></i>Editar</a>
                                                <a href="" ng-click="abremodal('../Curriculum_mant/eliminar_vista_capacitaciones_curriculum/' ,cap_c.id_capacitacion_curriculum)" class="btn btn-block btn-info btn-sm"><i class="fa fa-star fa-fw"></i>Eliminar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <h4> Institucion que la impartio: </h4> <h4 class="text-info">{{cap_c.nombre_institucion}} </h4>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <h4> Resumen Capacitacion: </h4> <h4 class="text-info"> {{cap_c.descripcion_capacitacion}} </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
