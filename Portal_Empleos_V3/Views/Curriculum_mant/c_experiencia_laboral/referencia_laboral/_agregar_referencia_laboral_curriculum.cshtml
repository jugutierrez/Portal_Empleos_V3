<md-dialog>

    <md-toolbar>
        <div class="md-toolbar-tools">

        </div>
    </md-toolbar>

    <md-dialog-content>
        <div class="lg-dialog-content">
            <div class="well">
                <h1 class="text-center"> AGREGAR REFERENCIA LABORAL</h1>
                <hr>
                <form name="mainForm" data-ng-submit="agregar_referencia_laboral()" data-ng-controller="data1" ng-model="agrega_referencia_laboral">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Hidden("id_experiencia_laboral_curriculum", (Int32)ViewBag.id_experiencia_laboral_curriculum, new { @ng_model = "agrega_referencia_laboral.id_experiencia_laboral_curriculum", ng_init = "agrega_referencia_laboral.id_experiencia_laboral_curriculum = " + (Int32)ViewBag.id_experiencia_laboral_curriculum })

                            <div class="form-group">
                                <label class="control-label" for="exampleInputEmail1">Nombre Referente:</label>
                                <input class="form-control input-lg" id="nombre_experiencia_laboral_curriculum" name="nombre_experiencia_laboral_curriculum" placeholder="EJ: juanito juan harry"
                                       type="text" ng-model="agrega_referencia_laboral.nombre_referencia_laboral" required>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="exampleInputPassword1">Numero Contacto:</label>
                                <input class="form-control input-lg" id="empresa_experiencia_laboral" name="empresa_experiencia_laboral_curriculum"
                                       placeholder="EJ: Desarrollador de sistemas " type="text" ng-model="agrega_referencia_laboral.contacto_referencia_laboral" required>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" for="exampleInputEmail1">Cargo Referente:</label>
                                <input class="form-control input-lg" id="nombre_experiencia_laboral_curriculum" name="nombre_experiencia_laboral_curriculum" placeholder="EJ: 789541236"
                                       type="text" ng-model="agrega_referencia_laboral.cargo_referencia_laboral" required>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="exampleInputEmail1">Email:</label>
                                <input class="form-control input-lg" id="nombre_experiencia_laboral_curriculum" name="nombre_experiencia_laboral_curriculum" placeholder="EJ: maipu@maipu.cl"
                                       type="text" ng-model="agrega_referencia_laboral.correo_referencia_laboral" required>
                            </div>


                        </div>
                        <div class="col-md-12">


                            <div class="row">
                                <div class="well">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-block btn-lg btn-info">
                                            Agregar Referencia laboral
                                        </button>


                                    </div>
                                    <div class="form-group ">

                                        <a href="" class="btn  btn-block btn-danger btn-lg" ng-click="closeDialog()">Cancelar</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </md-dialog-content>
</md-dialog>
