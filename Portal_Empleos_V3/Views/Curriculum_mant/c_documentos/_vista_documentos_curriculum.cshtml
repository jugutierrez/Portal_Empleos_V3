<div class="panel panel-primary">
    <div class="panel-heading clearfix">

        <div class="pull-right">
            <div ng-controller="data1">

                <a href="" ng-click="abremodal('../Curriculum_mant/agregar_vista_documentos_curriculum' ,'')" class="btn btn-default "><i class="fa fa-fw fa-lg fa-plus-circle text-warning"></i>Agregar</a>
            </div>
        </div>
        <div class="pull-left">
            <h3>Mis Documentos</h3>
        </div>
    </div>
    <div class="panel-body" style="word-break: break-word">
        <div class="col-md-12">



            <div ng-show="ver_doc">
                <div layout="row" layout-sm="column" layout-align="space-around">
                    <md-progress-circular md-mode="indeterminate"></md-progress-circular>
                </div>
            </div>
            <div ng-show="!ver_doc && doc_curriculum.length <= 0">
                No se Encontraron resultados ...

            </div>
            <div ng-show="!ver_doc && error_doc ">
                error viejo no cargo ...
                 
            </div>
            <div ng-show="doc_curriculum.length > 0">
                <div ng-controller="data1">
                    <div ng-repeat="doc_c in doc_curriculum track by $index">


                        <h3>
                            <span class="label label-info item-select">
                                <a ng-click="abremodal('../Curriculum_mant/detalle_vista_documentos_curriculum/' , doc_c.id_documento_curriculum)">

                                 

                                    {{doc_c.nombre_documento_curriculum}}  
                                </a>
                                <a ng-click="abremodal('../Curriculum_mant/eliminar_vista_documentos_curriculum/' , doc_c.id_documento_curriculum)">

                                    <i class="fa  fa-close"></i>
                                </a>

                            </span>
                        </h3>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

