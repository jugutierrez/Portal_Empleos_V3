@model Portal_Empleos_V3.Models.curriculums
<div class="panel panel-primary">
    <div class="panel-heading clearfix">

        <div class="pull-right">
            <div ng-controller="data1">
                <a href="" ng-click="abremodal('../Curriculum_mant/editar_vista_foto_curriculum/', foto_per.id_curriculum)" class="btn btn-default "><i class="fa fa-fw fa-lg fa-plus-circle text-warning"></i>Editar</a>
            </div>
        </div>
        <div class="pull-left">
            <h3>Mi Foto de Perfil</h3>
        </div>
    </div>
    <div class="panel-body">
        <div class="col-md-12">
     
            <div ng-if="ver_foto">
                <div layout="row" layout-sm="column" layout-align="space-around">
                    <md-progress-circular md-mode="indeterminate"></md-progress-circular>
                </div>
            </div>
            <div ng-if="!ver_foto && error_foto && foto_per === undefined">
                No se Encontraron resultados ...


            </div>
            <div ng-if="!error_foto">
                error viejo no cargo ...

            </div>

            <div ng-if="foto_per">

                <img data-ng-src="data:image/png;base64,{{foto_per.foto_curriculum}}" data-err-src="http://k15.kn3.net/05DC618D2.jpg" class="center-block img-responsive img-thumbnail" />


            </div>



            </div>

        </div>

    </div>

